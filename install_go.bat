@ECHO OFF

SET GO_DISTRIBUTION=1.19
SET GO_INSTALLER_NAME=go%GO_DISTRIBUTION%.windows-amd64.msi

CALL go version
IF %ERRORLEVEL% NEQ 0 (
	curl https://go.dev/dl/go%GO_DISTRIBUTION%.windows-amd64.msi -J -L -o %GO_INSTALLER_NAME%
	CALL %GO_INSTALLER_NAME%
	IF %ERRORLEVEL% GTR 1 EXIT 1

    PUSHD server
    SETX GOPATH %CD%
    POPD
	
	DEL %GO_INSTALLER_NAME%
)